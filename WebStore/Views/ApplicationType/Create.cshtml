@model WebStore.Models.ApplicationType

<form method="post" asp-action="Create">
    <div class="border p-3">
        
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Application Type</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TypeName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TypeName" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>

                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @*keep this empty*@
            </div>
        </div>

    </div> 
</form>

